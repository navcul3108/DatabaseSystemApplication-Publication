extends ../shared_profile.pug

block variables
  -var groupAlias = 'reviewer'

block groupProfile
            .card
              .card-header.bg-secondary
                h2.text-white.d-inline Phản biện
                button.d-inline.float-right.btn.btn-info
                  span
                    i.fa.fa-2x.fa-edit
              .card-body
                form(action="update-profile", method="post")#author-profile-form.w-100
                  .form-group.w-100
                      label(for='privateEmail') Email cá nhân
                      input.form-control(type='email' name="privateEmail" value='')
                  .form-group.w-100
                      label(for='publicEmail') Email cơ quan
                      input.form-control(type='email' name="publicEmail" value='')
                  .form-group.w-100
                      label(for='level') Trình độ
                      input.form-control(type='text' name="level" value='')
                  .form-group.w-100
                      label(for='major') Chuyên môn
                      input.form-control(type='text' name="major" value='')  
                  .form-group.w-100
                      label(for='workingDate') Ngày công tác
                      input.form-control(type='datetime' name="workingDate" value='')
                  .d-flex.justify-content-end
                      button.btn.btn-success.mr-2(type='submit') Save
                      button.btn.btn-danger.mr-2 Cancel						
