block variables
doctype html
html
  head
    meta(charset="utf-8")
    meta(name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no")
    title Publication-#{title}
    link(rel="stylesheet" href="/stylesheets/bootstrap/bootstrap.min.css")
    link(rel='stylesheet', href="/stylesheets/style.css")
    link(href="/stylesheets/css/mdb.min.css" rel="stylesheet")
    link(rel="stylesheet" href="/font-awesome-4.7.0/css/font-awesome.min.css")
    script(src="https://code.jquery.com/jquery-3.5.1.min.js")
    script(src="/javascripts/bootstrap.bundle.min.js")
  body
    nav.navbar.navbar-expand-md.navbar-light.bg-light.mb-5
      a.navbar-brand Publication
      .collapse.navbar-collapse
        ul.navbar-nav.mr-auto
          li.nav-item
            a.nav-link(href="/", title="Home") Home
          li.nav-item
            a.nav-link(href="/", title="About") About
          if user != undefined
            li.nav-item
              a.nav-link(href="/query", title="Contact") Query      
          if isAdmin
            li.nav-item
              a.nav-link(href="/admin/manage-people", title="Contact") Manage peoples
        ul.navbar-nav
          if user == undefined
            li.nav-item.mr-2
              a.nav-link.btn-floating.btn-lg.btn-primary(href="/login").
                #[i.fa.fa-sign-in] Login
            li.nav-item.mr-2
              a.nav-link.btn-floating.btn-lg.btn-secondary(href="/users/register").
                #[i.fa.fa-user-plus] Sign up
          else
            li.nav-item
              .dropdown
                a.nav-link.btn.btn-primary.dropdown-toggle(href="#" type="button" id="accountDropdown" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false").
                  #[i.fa.fa-2x.fa-user-circle] #{user.profile.lastName}
                .dropdown-menu(aria-labelledby="accountDropdown")
                  a.dropdown-item(href="/users/profile") Profile
                  .dropdown-divider
                  a(onclick="document.getElementById('logoutForm').submit()" id="logout-btn") Logout
              
    form(type="hidden" id="logoutForm" action="/logout", method="post")
    .container(id="content")
      block content

